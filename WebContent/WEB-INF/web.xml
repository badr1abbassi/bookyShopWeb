        <servlet-class>ma.ensias.bookshop.servlet.ValiderAchatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListeArticlesServlets</servlet-name>
        <url-pattern>/ListeArticlesServlets</url-pattern>
   		<url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddArticleToShoppingCart</servlet-name>
        <url-pattern>/AddArticleToShoppingCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValiderAchatServlet</servlet-name>
        <url-pattern>/ValiderAchatServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
